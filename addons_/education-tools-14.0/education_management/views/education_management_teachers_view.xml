<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="education_management_teachers_view_form" model="ir.ui.view">
        <field name="name">em.teachers.form</field>
        <field name="model">em.teachers</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <separator string="Teachers Data"/>
                    <group>
                        <group>
                            <field name="first_name_teacher" />
                            <field name="last_name_teacher" />
                        </group>
                        <group>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="education_management_teachers_view_tree" model="ir.ui.view">
        <field name="name">em.teachers.tree</field>
        <field name="model">em.teachers</field>
        <field name="arch" type="xml">
            <tree>
                <field name="first_name_teacher" />
                <field name="last_name_teacher" />
            </tree>
        </field>
    </record>

    <record id="education_management_teachers_view_search" model="ir.ui.view">
        <field name="name">em.teachers.search</field>
        <field name="model">em.teachers</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <search string="Education Management - Teachers">
                <field name="first_name_teacher" />
                <field name="last_name_teacher" />
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="education_management_teachers_action">
        <field name="name">Education Management - Teachers</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">em.teachers</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="education_management_teachers_view_search"/>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.actions.act_window.view" id="education_management_open_teachers_action_form">
        <field name="act_window_id" ref="education_management_teachers_action"/>
        <field name="sequence" eval="20"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="education_management_teachers_view_form"/>
    </record>

    <record model="ir.actions.act_window.view" id="education_management_open_teachers_action_tree">
        <field name="act_window_id" ref="education_management_teachers_action"/>
        <field name="sequence" eval="10"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="education_management_teachers_view_tree"/>
    </record>

    <menuitem name="Teachers" id="education_management_teachers_menu"
              parent="education_management_base_menu" action="education_management_teachers_action"/>

    <menuitem name="Teachers" id="education_management_submenu_teachers_menu"
              parent="education_management_teachers_menu"
              action="education_management_teachers_action"/>

</odoo>